<h1>Edit Form</h1>

<% include ./partials/header %>
<div class="container">
    <div class="row">
<h1 class="text-center">Edit <%= registerVar.firstName %> - <%= registerVar.lastName %></h1>
<div style="width : 30%; margin:25px auto">
<form action="/register/<%= registerVar._id %>?_method=PUT" method="POST">
    <div class="form-group">
    <input class="form-control" type="text" name="register[firstname]" value="<%=registerVar.firstName%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="text" name="register[lastname]" value="<%=registerVar.lastName%>">
    </div>
    <div class="form-group">
    <input class="form-control" type="number" name="register[phone]" value="<%= registerVar.phone %>">
    </div>
 
                <div class="form-group">
                    <input class="form-control" type="text" name="register[location_other]" value="<%=registerVar.locations%>">
                </div>
                <div class="form-group">
                    <input class="form-control" type="text" name="register[bus_stop]" value="<%=registerVar.bus_stop%>">
                </div>
                 <div class="form-group">
                    <input class="form-control" type="number" name="register[pickupTime]" value="<%=registerVar.pickupTime%>">
                </div>
                <div class="form-group">
                    <select name="register[gender]">
                          <option value="<%=registerVar.gender%>">Male</option>
                          <option value="<%=registerVar.gender%>">Female</option>
                    </select>
                </div>
                <div class="form-group">
                <textarea class="form-control" name="register[comment]"  id="" cols="30" rows="10"><%=registerVar.comment%></textarea>
                </div>
    <div class="form-group">
    <button class="btn btn-lg btn-primary btn-block">Submit</button>
    </div>
</form>
</div>
</div>
<a href="/portfolios">Go Back</a>
</div>
<% include ./partials/footer %>